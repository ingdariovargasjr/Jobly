<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PasswordFragment">

    <Button
        android:id="@+id/button_password"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="@drawable/back_background"
        app:layout_constraintBottom_toTopOf="@+id/label_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/label_password"
        android:layout_width="293dp"
        android:layout_height="42dp"
        android:fontFamily="@font/avenir_bold"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="29sp"
        android:text="Mi contrase침a ser치"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.245"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.134" />

    <EditText
        android:id="@+id/editTextTextPassword"
        android:layout_width="352dp"
        android:layout_height="63dp"
        android:ems="10"
        android:textAllCaps="false"
        android:padding="70px"
        android:fontFamily="@font/avenir_medium"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/gray_textbox"
        android:inputType="textPassword"
        android:hint="Contrase침a"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_password"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/continue_password"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:background="@drawable/bottom_color"
        android:fontFamily="@font/avenir_bold"
        android:textAllCaps="false"
        android:textColor="@color/colorBackground"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPassword"
        app:layout_constraintVertical_bias="0.24" />

    <TextView
        android:id="@+id/label_conditions"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:fontFamily="@font/avenir_medium"
        android:text="Al presionar Crear Cuenta o Iniciar sesi칩n aceptas nuestros Terminos y condiciones."
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continue_password"
        app:layout_constraintVertical_bias="0.148" />

</androidx.constraintlayout.widget.ConstraintLayout>