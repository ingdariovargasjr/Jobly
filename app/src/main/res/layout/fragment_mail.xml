<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.mail">

    <!-- TODO: Update blank fragment layout -->


    <Button
        android:id="@+id/back"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="@drawable/back_background"
        app:layout_constraintBottom_toTopOf="@+id/label_mail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/label_mail"
        android:layout_width="199dp"
        android:layout_height="35dp"
        android:text="Mi correo es"
        android:fontFamily="@font/avenir_bold"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="29sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.136"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <EditText
        android:id="@+id/editTextMail"
        android:layout_width="352dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:textAllCaps="false"

        android:fontFamily="@font/avenir_medium"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/gray_textbox"
        android:hint="Correo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_mail"
        app:layout_constraintVertical_bias="0.052" />

    <Button
        android:id="@+id/continue_mail"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:background="@drawable/bottom_color"
        android:fontFamily="@font/avenir_bold"
        android:textAllCaps="false"
        android:textColor="@color/colorBackground"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMail"
        app:layout_constraintVertical_bias="0.224" />

    <TextView
        android:id="@+id/label_conditions"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:fontFamily="@font/avenir_medium"
        android:text="Al presionar Crear Cuenta o Iniciar sesiÃ³n aceptas nuestros Terminos y condiciones."
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.528"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continue_mail"
        app:layout_constraintVertical_bias="0.148" />

</androidx.constraintlayout.widget.ConstraintLayout>


