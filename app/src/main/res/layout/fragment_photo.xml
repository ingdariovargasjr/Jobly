<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhotoFragment">

    <Button
        android:id="@+id/button_back"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="@drawable/back_background"
        app:layout_constraintBottom_toTopOf="@+id/label_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />

    <TextView
        android:id="@+id/label_photo"
        android:layout_width="292dp"
        android:layout_height="45dp"
        android:fontFamily="@font/avenir_bold"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="29sp"
        android:text="¡Sonrie!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.277"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />


    <Button
        android:id="@+id/photo"
        android:layout_width="157dp"
        android:layout_height="157dp"
        android:background="@drawable/button_rounded_camera"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.264" />

    <Button
        android:id="@+id/continue_photo"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:background="@drawable/bottom_color"
        android:fontFamily="@font/avenir_bold"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo"
        app:layout_constraintVertical_bias="0.153" />

    <TextView
        android:id="@+id/label_conditions"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:text="Al presionar Crear Cuenta o Iniciar sesión aceptas nuestros Terminos y condiciones."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continue_photo"
        app:layout_constraintVertical_bias="0.136" />


</androidx.constraintlayout.widget.ConstraintLayout>
