<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Success">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="144dp"
            android:layout_height="135dp"
            android:src="@drawable/ic_check"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.462"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.258" />

        <TextView
            android:id="@+id/label_id"
            android:layout_width="351dp"
            android:layout_height="54dp"
            android:fontFamily="@font/avenir_bold"
            android:text="CompÃ¡rtenos un ID"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="29sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.137" />

        <Button
            android:id="@+id/button_mail"
            android:layout_width="35dp"
            android:layout_height="36dp"
            android:background="@drawable/back_background"
            app:layout_constraintBottom_toTopOf="@+id/label_id"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.089"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/continue_ID"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:background="@drawable/bottom_color"
        android:fontFamily="@font/avenir_bold"
        android:text="Continuar"
        android:textAllCaps="false"
        android:textColor="@color/colorBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_privacy"
        app:layout_constraintVertical_bias="0.137" />

    <Button
            android:id="@+id/skip_about_you"
            android:layout_width="263dp"
            android:layout_height="57dp"
            android:background="@drawable/button_transparent"
            android:fontFamily="@font/avenir_medium"
            android:text="Saltar por ahora"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/continue_ID"
            app:layout_constraintVertical_bias="0.157" />

    <TextView
        android:id="@+id/label_privacy"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:fontFamily="@font/avenir_medium"
        android:gravity="center"
        android:text="Aviso de Privacidad de Datos."
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />


</androidx.constraintlayout.widget.ConstraintLayout>
