<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login.ConfirmPasswordFragment">

    <Button
        android:id="@+id/button_mail"
        android:layout_width="35dp"
        android:layout_height="36dp"
        android:background="@drawable/back_background"
        app:layout_constraintBottom_toTopOf="@+id/label_confirm_password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.444" />


    <TextView
        android:id="@+id/label_confirm_password"
        android:layout_width="357dp"
        android:layout_height="46dp"
        android:fontFamily="@font/avenir_bold"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="29sp"
        android:text="Confirmar contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.611"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.133" />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="352dp"
        android:layout_height="63dp"
        android:ems="10"
        android:textAllCaps="false"

        android:fontFamily="@font/avenir_medium"
        android:textColor="#000000"
        android:textColorHint="#FFFFFF"
        android:background="@drawable/gray_textbox"
        android:inputType="textPassword"
        android:hint="Contraseña"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_confirm_password"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/continue_confirm_password"
        android:layout_width="263dp"
        android:layout_height="57dp"
        android:background="@drawable/bottom_color"
        android:fontFamily="@font/avenir_bold"
        android:textAllCaps="false"
        android:textColor="@color/colorBackground"
        android:text="Continuar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextConfirmPassword"
        app:layout_constraintVertical_bias="0.189" />

    <TextView
        android:id="@+id/label_conditions"
        android:layout_width="271dp"
        android:layout_height="44dp"
        android:fontFamily="@font/avenir_medium"
        android:text="Al presionar Crear Cuenta o Iniciar sesión aceptas nuestros Terminos y condiciones."
        android:textAllCaps="false"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/continue_confirm_password"
        app:layout_constraintVertical_bias="0.149" />


</androidx.constraintlayout.widget.ConstraintLayout>
